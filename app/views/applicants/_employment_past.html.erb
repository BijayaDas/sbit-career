<%= f.simple_fields_for @applicant.employments.build do |emp| %>
    <%= emp.hidden_field :current, value: "past" %>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-employer">Name of the Employer<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :name, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-address">Address<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :address, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-phone">Phone<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :phone, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Dates Employed From<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :start, class: "form-control col-md-7 col-xs-12 single_cal1", readonly: true %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Dates Employed To<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :end, class: "form-control col-md-7 col-xs-12 single_cal1", readonly: true %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-designation">Your Designation<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :designation, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-code">Employee Code<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :emp_id, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-responsibilities">Responsibilities<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :roles, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="present-leaving">Reason for Leaving<span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
        <%= emp.input_field :leaving_reason, class: "form-control col-md-7 col-xs-12" %>
        </div>
    </div>
<% end %>  