   <%= add_per.simple_fields_for :addresses do |add| %>
        <div class="well row">
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Permanent Address
                </label>
                <%= add.hidden_field :address_type, value: 'permanent' %>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentcity">Address <span class="required">*</span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                <%= add.input_field :detail, class: "form-control col-md-7 col-xs-12" %>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentcity">City <span class="required">*</span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                <%= add.input_field :city, class: "form-control col-md-7 col-xs-12" %>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentstate">State<span class="required">*</span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                <%= add.input_field :state, class: "form-control col-md-7 col-xs-12" %>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentpin">Pin<span class="required">*</span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                <%= add.input_field :pin, class: "form-control col-md-7 col-xs-12" %>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentphone">Telephone<span class="required">*</span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                <%= add.input_field :telephone, class: "form-control col-md-7 col-xs-12" %>
                </div>
            </div>
             <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentphone">Mobile<span class="required">*</span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                <%= add.input_field :mobile, class: "form-control col-md-7 col-xs-12" %>
                </div>
            </div>
        </div>
    <% end %>